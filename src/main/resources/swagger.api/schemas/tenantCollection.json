{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Response schema for tenants by consortium Id",
  "type": "object",
  "properties": {
    "tenants": {
      "description": "Tenants by consortium Id",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The ID of a specific Folio tenant"
          },
          "code": {
            "type": "string",
            "description": "The tenant short name",
            "minLength": 2,
            "maxLength": 5,
            "pattern": "^[a-zA-Z0-9]*$"
          },
          "name": {
            "type": "string",
            "description": "The tenant full name",
            "minLength": 2,
            "maxLength": 150
          },
          "isCentral": {
            "type": "boolean",
            "description": "Indicates whether the tenant is central"
          },
          "isDeleted": {
            "type": "boolean",
            "description": "Indicates whether the tenant is deleted"
          }
        },
        "required": ["id", "code", "name", "isCentral"],
        "additionalProperties": false
      }
    },
    "totalRecords": {
      "type": "integer"
    }
  },
  "required": [
    "tenants",
    "totalRecords"
  ],
  "additionalProperties": false
}